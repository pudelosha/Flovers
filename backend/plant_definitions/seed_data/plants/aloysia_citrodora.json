  "translations": {
    "en": {
      "common_name": "Lemon verbena",
      "description": "Aromatic shrub native to South America, valued for its lemon-scented leaves. It prefers full sun, warm conditions, and regular watering during growth."
    },
    "pl": {
      "common_name": "Werbena cytrynowa",
      "description": "Aromatyczny krzew z Ameryki Południowej o cytrynowym zapachu liści. Wymaga słońca, ciepła i regularnego podlewania w sezonie."
    },
    "de": {
      "common_name": "Zitronenverbene",
      "description": "Duftender Strauch aus Südamerika mit zitronigem Aroma. Bevorzugt volle Sonne, Wärme und gleichmäßiges Gießen."
    },
    "fr": {
      "common_name": "Verveine citronnelle",
      "description": "Arbuste aromatique d’Amérique du Sud aux feuilles citronnées. Il aime le plein soleil et un arrosage régulier."
    },
    "it": {
      "common_name": "Cedrina",
      "description": "Arbusto aromatico sudamericano con foglie al profumo di limone. Cresce bene al sole con annaffiature regolari."
    },
    "es": {
      "common_name": "Hierba luisa",
      "description": "Arbusto aromático de Sudamérica con intenso aroma a limón. Necesita sol pleno y riego moderado."
    },
    "pt": {
      "common_name": "Lúcia-lima",
      "description": "Arbusto aromático originário da América do Sul, com folhas perfumadas de limão. Prefere sol pleno e regas regulares."
    },
    "ar": {
      "common_name": "لويزة",
      "description": "شجيرة عطرية من أمريكا الجنوبية بأوراق برائحة الليمون. تحتاج إلى شمس كاملة وري معتدل."
    },
    "hi": {
      "common_name": "लेमन वर्बेना",
      "description": "दक्षिण अमेरिका की सुगंधित झाड़ी, जिसकी पत्तियों में नींबू की खुशबू होती है। इसे धूप और नियमित पानी पसंद है।"
    },
    "zh": {
      "common_name": "柠檬马鞭草",
      "description": "原产南美的芳香灌木，叶片带柠檬香味。喜全日照和适量浇水。"
    },
    "ja": {
      "common_name": "レモンバーベナ",
      "description": "南米原産の香り高い低木で、葉にレモンの香りがあります。日当たりと適度な水やりを好みます。"
    },
    "ko": {
      "common_name": "레몬버베나",
      "description": "남아메리카 원산의 향기로운 관목으로 잎에서 레몬 향이 납니다. 햇빛과 규칙적인 물주기가 필요합니다."
    }
  },

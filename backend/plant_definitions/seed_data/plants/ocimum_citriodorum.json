  "translations": {
    "en": {
      "common_name": "Lemon Basil",
      "description": "Ocimum citriodorum is a fragrant basil with a distinct lemon scent. It is commonly grown as a culinary herb and thrives in bright light and warm conditions."
    },
    "pl": {
      "common_name": "Bazylia cytrynowa",
      "description": "Ocimum citriodorum to aromatyczna bazylia o cytrynowym zapachu. Jest popularnym ziołem kuchennym i najlepiej rośnie w jasnym, ciepłym miejscu."
    },
    "de": {
      "common_name": "Zitronenbasilikum",
      "description": "Ocimum citriodorum ist ein duftendes Basilikum mit Zitronenaroma. Es wird als Küchenkraut genutzt und bevorzugt viel Licht und Wärme."
    },
    "fr": {
      "common_name": "Basilic citron",
      "description": "Ocimum citriodorum est un basilic aromatique au parfum de citron. Il est cultivé comme herbe culinaire et aime la chaleur et la lumière."
    },
    "it": {
      "common_name": "Basilico al limone",
      "description": "Ocimum citriodorum è un basilico profumato con aroma di limone. È usato in cucina e cresce bene con luce intensa e temperature calde."
    },
    "es": {
      "common_name": "Albahaca limón",
      "description": "Ocimum citriodorum es una albahaca aromática con olor a limón. Se cultiva como hierba culinaria y requiere sol y calor."
    },
    "pt": {
      "common_name": "Manjericão-limão",
      "description": "Ocimum citriodorum é um manjericão aromático com fragrância de limão. É usado na culinária e prefere sol intenso e clima quente."
    },
    "ar": {
      "common_name": "ريحان الليمون",
      "description": "Ocimum citriodorum نبات ريحان عطري برائحة الليمون. يُزرع كعشب مطبخي ويحتاج إلى ضوء قوي ودفء."
    },
    "hi": {
      "common_name": "लेमन तुलसी",
      "description": "Ocimum citriodorum एक सुगंधित तुलसी है जिसमें नींबू की खुशबू होती है। यह रसोई में उपयोग की जाती है और धूप व गर्मी पसंद करती है।"
    },
    "zh": {
      "common_name": "柠檬罗勒",
      "description": "Ocimum citriodorum 是一种带有柠檬香味的罗勒。常作为香草种植，适合温暖和充足光照的环境。"
    },
    "ja": {
      "common_name": "レモンバジル",
      "description": "Ocimum citriodorum はレモンの香りを持つバジルです。料理用ハーブとして栽培され、暖かく明るい環境を好みます。"
    },
    "ko": {
      "common_name": "레몬 바질",
      "description": "Ocimum citriodorum은 레몬 향이 나는 바질입니다. 요리용 허브로 재배되며 따뜻하고 밝은 환경을 좋아합니다."
    }
  },

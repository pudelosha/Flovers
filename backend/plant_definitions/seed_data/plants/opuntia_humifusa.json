  "translations": {
    "en": {
      "common_name": "Eastern Prickly Pear",
      "description": "Opuntia humifusa is a hardy cactus native to North America. It thrives in full sun and dry conditions."
    },
    "pl": {
      "common_name": "Opuncja wschodnia",
      "description": "Opuntia humifusa to wytrzymały kaktus pochodzący z Ameryki Północnej. Preferuje pełne słońce i suche warunki."
    },
    "de": {
      "common_name": "Östliche Feigenkaktus",
      "description": "Opuntia humifusa ist ein robuster Kaktus, der in Nordamerika beheimatet ist. Er gedeiht in voller Sonne und trockenen Bedingungen."
    },
    "fr": {
      "common_name": "Cactus poilu de l'Est",
      "description": "Opuntia humifusa est un cactus résistant originaire d'Amérique du Nord. Il prospère en plein soleil et dans des conditions sèches."
    },
    "it": {
      "common_name": "Fico d'India orientale",
      "description": "Opuntia humifusa è un cactus resistente originario del Nord America. Cresce bene al sole e in condizioni asciutte."
    },
    "es": {
      "common_name": "Higo chumbo oriental",
      "description": "Opuntia humifusa es un cactus resistente originario de América del Norte. Crece bien a pleno sol y en condiciones secas."
    },
    "pt": {
      "common_name": "Cacto pêra espinhosa oriental",
      "description": "Opuntia humifusa é um cacto resistente nativo da América do Norte. Desenvolve-se bem ao sol e em condições secas."
    },
    "ar": {
      "common_name": "توت الشائك الشرقي",
      "description": "Opuntia humifusa هو صبار مقاوم موطنه أمريكا الشمالية. يزدهر في الشمس الكاملة وفي الظروف الجافة."
    },
    "hi": {
      "common_name": "पूर्वी कांटेदार नाशपाती",
      "description": "Opuntia humifusa एक मजबूत कैक्टस है जो उत्तर अमेरिका का मूल निवासी है। यह पूर्ण सूर्य और शुष्क स्थितियों में पनपता है।"
    },
    "zh": {
      "common_name": "东部刺梨",
      "description": "Opuntia humifusa 是一种耐寒的仙人掌，原产于北美。它在充足阳光和干燥的条件下生长良好。"
    },
    "ja": {
      "common_name": "東部ウチワサボテン",
      "description": "Opuntia humifusaは北アメリカ原産の丈夫なサボテンです。日当たりの良い乾燥した環境でよく育ちます。"
    },
    "ko": {
      "common_name": "동부 가시배추",
      "description": "Opuntia humifusa는 북미가 원산지인 튼튼한 선인장입니다. 햇빛이 잘 드는 건조한 환경에서 잘 자랍니다."
    }
  },

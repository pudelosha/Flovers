  "translations": {
    "en": {
      "common_name": "Flaming Sword",
      "description": "Vriesea splendens is an ornamental bromeliad native to South America. It is known for its striking, brightly colored flower spikes."
    },
    "pl": {
      "common_name": "Miecz Płomienia",
      "description": "Vriesea splendens to ozdobna bromelia pochodząca z Ameryki Południowej. Znana jest ze swoich jaskrawych, kolorowych kwiatostanów."
    },
    "de": {
      "common_name": "Flammenschwert",
      "description": "Vriesea splendens ist eine Zierbromelie aus Südamerika. Sie ist bekannt für ihre auffälligen, hellen Blütenstände."
    },
    "fr": {
      "common_name": "Épée enflammée",
      "description": "Vriesea splendens est une bromélie ornementale originaire d'Amérique du Sud. Elle est connue pour ses épis floraux aux couleurs vives."
    },
    "it": {
      "common_name": "Spada Fiammeggiante",
      "description": "Vriesea splendens è una bromelia ornamentale originaria del Sud America. È conosciuta per le sue infiorescenze dai colori vivaci."
    },
    "es": {
      "common_name": "Espada Ardiente",
      "description": "Vriesea splendens es una bromelia ornamental originaria de América del Sur. Es conocida por sus llamativos picos florales de colores brillantes."
    },
    "pt": {
      "common_name": "Espada Flamejante",
      "description": "Vriesea splendens é uma bromélia ornamental nativa da América do Sul. É conhecida por suas impressionantes espigas florais coloridas."
    },
    "ar": {
      "common_name": "سيف اللهب",
      "description": "Vriesea splendens هي بروميليا زينة موطنها أمريكا الجنوبية. تشتهر بسيقانها الزهرية الملونة واللامعة."
    },
    "hi": {
      "common_name": "आग की तलवार",
      "description": "Vriesea splendens एक सजावटी ब्रोमेलीया है जो दक्षिण अमेरिका की मूल निवासी है। यह अपनी आकर्षक, चमकीली रंगों वाली पुष्पमाला के लिए प्रसिद्ध है।"
    },
    "zh": {
      "common_name": "火焰剑",
      "description": "Vriesea splendens 是一种原产于南美洲的观赏性凤梨科植物。它因其鲜艳的花穗而闻名。"
    },
    "ja": {
      "common_name": "フレイミングソード",
      "description": "Vriesea splendens は南アメリカ原産の観賞用ブロメリアです。鮮やかな色の花穂が特徴です。"
    },
    "ko": {
      "common_name": "불꽃 검",
      "description": "Vriesea splendens는 남미 원산지의 장식용 브로메리아입니다. 선명한 색상의 꽃줄기로 유명합니다."
    }
  },

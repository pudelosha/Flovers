  "translations": {
    "en": {
      "common_name": "Basil",
      "description": "Basil is an aromatic herb commonly used in cooking. It thrives in warm, sunny environments and well-drained soil."
    },
    "pl": {
      "common_name": "Bazylia",
      "description": "Bazylia to zioło o intensywnym zapachu, powszechnie stosowane w kuchni. Rośnie najlepiej w ciepłych, słonecznych miejscach i w dobrze przepuszczalnej glebie."
    },
    "de": {
      "common_name": "Basilikum",
      "description": "Basilikum ist ein aromatisches Kraut, das häufig in der Küche verwendet wird. Es gedeiht am besten in warmen, sonnigen Umgebungen und gut durchlässigem Boden."
    },
    "fr": {
      "common_name": "Basilic",
      "description": "Le basilic est une herbe aromatique couramment utilisée en cuisine. Il prospère dans des environnements chauds et ensoleillés, et dans un sol bien drainé."
    },
    "it": {
      "common_name": "Basilico",
      "description": "Il basilico è un'erba aromatica usata comunemente in cucina. Cresce bene in ambienti caldi e soleggiati e in terreni ben drenati."
    },
    "es": {
      "common_name": "Albahaca",
      "description": "La albahaca es una hierba aromática utilizada comúnmente en la cocina. Crece bien en ambientes cálidos y soleados, en suelos bien drenados."
    },
    "pt": {
      "common_name": "Manjericão",
      "description": "O manjericão é uma erva aromática comumente utilizada na culinária. Ela cresce bem em ambientes quentes e ensolarados, em solo bem drenado."
    },
    "ar": {
      "common_name": "ريحان",
      "description": "الريحان هو نبات عطري يستخدم عادة في الطهي. يزدهر في البيئات الدافئة والمشمسة وفي التربة جيدة التصريف."
    },
    "hi": {
      "common_name": "तुलसी",
      "description": "तुलसी एक सुगंधित पौधा है जिसका उपयोग सामान्यतः रसोई में किया जाता है। यह गर्म, धूप वाले वातावरण और अच्छे जल निकासी वाली मिट्टी में अच्छे से उगता है।"
    },
    "zh": {
      "common_name": "罗勒",
      "description": "罗勒是一种常用于烹饪的芳香草本植物。它在温暖、阳光充足的环境中以及排水良好的土壤中生长良好。"
    },
    "ja": {
      "common_name": "バジル",
      "description": "バジルは料理でよく使われる香り高いハーブです。暖かく日当たりの良い環境と良好な排水性の土壌で育ちます。"
    },
    "ko": {
      "common_name": "바질",
      "description": "바질은 요리에 자주 사용되는 향기로운 허브입니다. 따뜻하고 햇볕이 잘 드는 환경과 배수가 좋은 토양에서 잘 자랍니다."
    }
  },

  "translations": {
    "en": {
      "common_name": "Wild pansy",
      "description": "Viola tricolor is a small flowering plant native to Europe. It prefers cool temperatures, partial sun, and evenly moist soil."
    },
    "pl": {
      "common_name": "Bratek polny",
      "description": "Viola tricolor to niewielka roślina kwitnąca pochodząca z Europy. Najlepiej rośnie w chłodnych warunkach i półcieniu."
    },
    "de": {
      "common_name": "Wildes Stiefmütterchen",
      "description": "Viola tricolor ist eine kleine Blütenpflanze aus Europa. Sie mag kühle Temperaturen und gleichmäßig feuchte Erde."
    },
    "fr": {
      "common_name": "Pensée sauvage",
      "description": "Viola tricolor est une petite plante fleurie originaire d’Europe. Elle apprécie les climats frais et un sol humide."
    },
    "it": {
      "common_name": "Viola del pensiero",
      "description": "Viola tricolor è una piccola pianta fiorita europea. Cresce bene in climi freschi con luce moderata."
    },
    "es": {
      "common_name": "Pensamiento silvestre",
      "description": "Viola tricolor es una planta pequeña originaria de Europa. Prefiere temperaturas frescas y riego regular."
    },
    "pt": {
      "common_name": "Amor-perfeito-silvestre",
      "description": "Viola tricolor é uma planta florida europeia. Desenvolve-se melhor em clima fresco e solo úmido."
    },
    "ar": {
      "common_name": "البنفسج البري",
      "description": "نبات Viola tricolor مزهر صغير موطنه أوروبا. يفضل الطقس المعتدل والتربة الرطبة."
    },
    "hi": {
      "common_name": "जंगली पैंसी",
      "description": "Viola tricolor यूरोप का छोटा फूलदार पौधा है। यह ठंडे मौसम और नियमित सिंचाई को पसंद करता है।"
    },
    "zh": {
      "common_name": "三色堇",
      "description": "Viola tricolor 原产于欧洲，是一种小型开花植物。适合凉爽气候和湿润土壤。"
    },
    "ja": {
      "common_name": "ビオラ・トリカラー",
      "description": "Viola tricolor はヨーロッパ原産の小型植物です。涼しい環境と適度な水分を好みます。"
    },
    "ko": {
      "common_name": "야생 팬지",
      "description": "Viola tricolor는 유럽 원산의 작은 개화 식물입니다. 서늘한 기온과 적당한 물을 선호합니다."
    }
  },

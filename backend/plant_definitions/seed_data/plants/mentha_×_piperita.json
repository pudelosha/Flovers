  "translations": {
    "en": {
      "common_name": "Peppermint",
      "description": "Peppermint is a fast-growing aromatic herb widely used for culinary and medicinal purposes. It prefers bright light, consistently moist soil, and regular harvesting to stay compact."
    },
    "pl": {
      "common_name": "Mięta pieprzowa",
      "description": "Mięta pieprzowa to szybko rosnące zioło o intensywnym aromacie. Najlepiej rośnie w jasnym miejscu i w stale wilgotnym podłożu."
    },
    "de": {
      "common_name": "Pfefferminze",
      "description": "Pfefferminze ist ein schnell wachsendes, aromatisches Kraut. Sie benötigt helles Licht und gleichmäßig feuchte Erde."
    },
    "fr": {
      "common_name": "Menthe poivrée",
      "description": "La menthe poivrée est une herbe aromatique vigoureuse. Elle apprécie une lumière vive et un sol maintenu humide."
    },
    "it": {
      "common_name": "Menta piperita",
      "description": "La menta piperita è un’erba aromatica a crescita rapida. Richiede luce intensa e terreno costantemente umido."
    },
    "es": {
      "common_name": "Menta piperita",
      "description": "La menta piperita es una hierba aromática de rápido crecimiento. Prefiere buena luz y riego frecuente."
    },
    "pt": {
      "common_name": "Hortelã-pimenta",
      "description": "A hortelã-pimenta é uma erva aromática vigorosa. Desenvolve-se melhor com boa luz e solo sempre úmido."
    },
    "ar": {
      "common_name": "النعناع الفلفلي",
      "description": "النعناع الفلفلي نبات عطري سريع النمو. يحتاج إلى ضوء جيد وتربة رطبة باستمرار."
    },
    "hi": {
      "common_name": "पिपरमिंट",
      "description": "पिपरमिंट एक तेज़ी से बढ़ने वाली सुगंधित जड़ी-बूटी है। इसे अच्छी रोशनी और नम मिट्टी की आवश्यकता होती है।"
    },
    "zh": {
      "common_name": "胡椒薄荷",
      "description": "胡椒薄荷是一种生长迅速的芳香草本植物。适合明亮环境并保持土壤湿润。"
    },
    "ja": {
      "common_name": "ペパーミント",
      "description": "ペパーミントは成長が早い香りの良いハーブです。明るい場所と湿った土を好みます。"
    },
    "ko": {
      "common_name": "페퍼민트",
      "description": "페퍼민트는 생장이 빠른 향기로운 허브입니다. 밝은 빛과 촉촉한 토양을 선호합니다."
    }
  },

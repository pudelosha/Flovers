  "translations": {
    "en": {
      "common_name": "Common Sage",
      "description": "Common sage is a versatile herb with aromatic leaves and purple flowers. It thrives in well-drained soil and full sun."
    },
    "pl": {
      "common_name": "Szałwia lekarska",
      "description": "Szałwia lekarska to wielofunkcyjna roślina o aromatycznych liściach i fioletowych kwiatach. Rośnie w dobrze przepuszczalnej glebie i pełnym słońcu."
    },
    "de": {
      "common_name": "Echte Salbei",
      "description": "Echter Salbei ist ein vielseitiges Kraut mit aromatischen Blättern und lila Blüten. Es gedeiht in gut durchlässigem Boden und voller Sonne."
    },
    "fr": {
      "common_name": "Sauge officinale",
      "description": "La sauge officinale est une herbe polyvalente aux feuilles aromatiques et aux fleurs violettes. Elle prospère dans un sol bien drainé et au plein soleil."
    },
    "it": {
      "common_name": "Salvia officinale",
      "description": "La salvia officinale è un'erba versatile con foglie aromatiche e fiori viola. Cresce in terreni ben drenati e in pieno sole."
    },
    "es": {
      "common_name": "Salvia oficial",
      "description": "La salvia oficial es una hierba versátil con hojas aromáticas y flores moradas. Crece en suelos bien drenados y bajo pleno sol."
    },
    "pt": {
      "common_name": "Sálvia comum",
      "description": "A sálvia comum é uma erva versátil com folhas aromáticas e flores roxas. Cresce em solo bem drenado e sob sol pleno."
    },
    "ar": {
      "common_name": "المريمية",
      "description": "المريمية هي عشبة متعددة الاستخدامات ذات أوراق عطرية وزهور بنفسجية. تنمو في التربة جيدة التصريف وأشعة الشمس الكاملة."
    },
    "hi": {
      "common_name": "साधारण शैलविया",
      "description": "साधारण शैलविया एक बहुपरकारी हर्ब है जिसमें सुगंधित पत्तियाँ और बैंगनी फूल होते हैं। यह अच्छे जल निकासी वाली मिट्टी और पूर्ण सूर्य में उगता है।"
    },
    "zh": {
      "common_name": "普通鼠尾草",
      "description": "普通鼠尾草是一种多用途的草本植物，具有芳香的叶子和紫色的花朵。它在排水良好的土壤和充足的阳光下生长。"
    },
    "ja": {
      "common_name": "セージ",
      "description": "セージは香りのある葉と紫色の花を持つ多目的なハーブです。排水性の良い土壌と日光の下で育ちます。"
    },
    "ko": {
      "common_name": "일반 세이지",
      "description": "일반 세이지는 향긋한 잎과 보라색 꽃을 가진 다목적 허브입니다. 배수가 좋은 토양과 햇볕이 잘 드는 곳에서 자랍니다."
    }
  },

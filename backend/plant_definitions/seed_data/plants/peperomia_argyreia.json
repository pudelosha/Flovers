  "translations": {
    "en": {
      "common_name": "Watermelon Peperomia",
      "description": "Peperomia argyreia is a small, decorative plant with striking watermelon-like leaves. It's easy to care for and thrives in moderate indoor conditions."
    },
    "pl": {
      "common_name": "Peperomia Watermelon",
      "description": "Peperomia argyreia to mała, ozdobna roślina z liśćmi przypominającymi arbuza. Łatwa w pielęgnacji, rozwija się w umiarkowanych warunkach."
    },
    "de": {
      "common_name": "Wassermelonen Peperomie",
      "description": "Peperomia argyreia ist eine kleine Zierpflanze mit auffälligen, wassermelonartigen Blättern. Sie ist pflegeleicht und gedeiht unter moderaten Bedingungen."
    },
    "fr": {
      "common_name": "Peperomia pastèque",
      "description": "Peperomia argyreia est une petite plante décorative aux feuilles ressemblant à des pastèques. Elle est facile à entretenir et prospère dans des conditions modérées."
    },
    "it": {
      "common_name": "Peperomia anguria",
      "description": "Peperomia argyreia è una pianta piccola e decorativa con foglie che assomigliano a quelle di anguria. È facile da curare e cresce in condizioni moderate."
    },
    "es": {
      "common_name": "Peperomia sandía",
      "description": "Peperomia argyreia es una planta pequeña y decorativa con hojas que se asemejan a la sandía. Es fácil de cuidar y prospera en condiciones moderadas."
    },
    "pt": {
      "common_name": "Peperomia melancia",
      "description": "Peperomia argyreia é uma planta pequena e decorativa com folhas que lembram melancia. Fácil de cuidar e cresce bem em condições moderadas."
    },
    "ar": {
      "common_name": "بيبريوميا بطيخ",
      "description": "Peperomia argyreia هي نبتة صغيرة زينة بأوراق تشبه البطيخ. يسهل العناية بها وتنمو في الظروف المعتدلة."
    },
    "hi": {
      "common_name": "तरबूज पेपरमिया",
      "description": "Peperomia argyreia एक छोटी, सजावटी पौधा है जिसमें तरबूज जैसी पत्तियाँ होती हैं। इसे देखभाल में आसानी होती है और यह मध्यम इनडोर परिस्थितियों में बढ़ता है।"
    },
    "zh": {
      "common_name": "西瓜叶景天",
      "description": "Peperomia argyreia 是一种小型装饰植物，叶子像西瓜一样。它易于护理，在适度的室内条件下茁壮成长。"
    },
    "ja": {
      "common_name": "ウォーターメロンペペロミア",
      "description": "Peperomia argyreiaは、スイカのような葉を持つ小さな装飾植物です。手入れが簡単で、適度な室内環境で育ちます。"
    },
    "ko": {
      "common_name": "수박 페페로미아",
      "description": "Peperomia argyreia는 수박 모양의 잎을 가진 작은 장식용 식물입니다. 관리가 쉽고 적당한 실내 조건에서 잘 자랍니다."
    }
  },

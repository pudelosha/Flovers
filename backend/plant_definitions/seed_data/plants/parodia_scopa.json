  "translations": {
    "en": {
      "common_name": "Ball Cactus",
      "description": "Parodia scopa is a small, globular cactus native to South America. It is known for its dense spines and vibrant yellow flowers."
    },
    "pl": {
      "common_name": "Kaktus kulisty",
      "description": "Parodia scopa to mały, kulisty kaktus pochodzący z Ameryki Południowej. Jest znany z gęstych cierni i intensywnie żółtych kwiatów."
    },
    "de": {
      "common_name": "Kugel-Kaktus",
      "description": "Parodia scopa ist ein kleiner, kugelförmiger Kaktus aus Südamerika. Er ist bekannt für seine dichten Stacheln und leuchtend gelben Blüten."
    },
    "fr": {
      "common_name": "Cactus boule",
      "description": "Parodia scopa est un petit cactus globulaire originaire d'Amérique du Sud. Il est connu pour ses épines denses et ses fleurs jaunes éclatantes."
    },
    "it": {
      "common_name": "Cactus a palla",
      "description": "Parodia scopa è un piccolo cactus globoso originario del Sud America. È noto per le sue spine dense e i suoi fiori gialli vivaci."
    },
    "es": {
      "common_name": "Cactus bola",
      "description": "Parodia scopa es un pequeño cactus globular originario de Sudamérica. Es conocido por sus espinas densas y sus flores amarillas vibrantes."
    },
    "pt": {
      "common_name": "Cacto bola",
      "description": "Parodia scopa é um pequeno cacto globoso nativo da América do Sul. É conhecido por seus espinhos densos e flores amarelas vibrantes."
    },
    "ar": {
      "common_name": "صبار كروي",
      "description": "Parodia scopa هو صبار صغير كروي موطنه أمريكا الجنوبية. وهو معروف بشوكه الكثيف وزهور صفراء زاهية."
    },
    "hi": {
      "common_name": "गोलाकार कैक्टस",
      "description": "Parodia scopa एक छोटा, गोलाकार कैक्टस है जो दक्षिण अमेरिका का मूल निवासी है। यह अपनी घनी कांटों और जीवंत पीले फूलों के लिए जाना जाता है।"
    },
    "zh": {
      "common_name": "球形仙人掌",
      "description": "Parodia scopa是一种小型球形仙人掌，原产于南美。它以密集的刺和鲜艳的黄色花朵而闻名。"
    },
    "ja": {
      "common_name": "ボールカクタス",
      "description": "Parodia scopaは南アメリカ原産の小さな球形のサボテンです。密な棘と鮮やかな黄色い花で知られています。"
    },
    "ko": {
      "common_name": "공 모양 선인장",
      "description": "Parodia scopa는 남미 원산지의 작은 공 모양 선인장입니다. 밀집한 가시와 선명한 노란 꽃으로 유명합니다."
    }
  },

  "translations": {
    "en": {
      "common_name": "Flapjack Plant",
      "description": "Kalanchoe luciae is a succulent with large, flat, paddle-shaped leaves that redden in strong sun. It is drought tolerant and well suited to bright indoor locations. Overwatering should be avoided."
    },
    "pl": {
      "common_name": "Kalanchoe łopatkowate",
      "description": "Kalanchoe luciae to sukulent o dużych, płaskich liściach, które czerwienieją w słońcu. Jest odporny na suszę i łatwy w uprawie domowej. Nie toleruje nadmiaru wody."
    },
    "de": {
      "common_name": "Flapjack-Pflanze",
      "description": "Kalanchoe luciae ist eine sukkulente Pflanze mit flachen, runden Blättern. Bei viel Sonne färben sich die Blätter rot. Staunässe sollte vermieden werden."
    },
    "fr": {
      "common_name": "Plante à palettes",
      "description": "Kalanchoe luciae est une plante succulente aux grandes feuilles plates. Une forte lumière accentue la coloration rouge. Elle demande peu d’arrosage."
    },
    "it": {
      "common_name": "Pianta pala",
      "description": "Kalanchoe luciae è una succulenta con foglie larghe e piatte. Il sole intenso rende i bordi rossastri. Richiede annaffiature molto moderate."
    },
    "es": {
      "common_name": "Planta paleta",
      "description": "Kalanchoe luciae es una suculenta de hojas planas y carnosas. Con mucho sol desarrolla tonos rojos. Necesita riego escaso."
    },
    "pt": {
      "common_name": "Planta paleta",
      "description": "Kalanchoe luciae é uma suculenta de folhas largas e achatadas. A luz intensa realça a cor avermelhada. Deve ser regada com moderação."
    },
    "ar": {
      "common_name": "نبات كالانشو",
      "description": "كالانشو لوسياي نبات عصاري بأوراق مسطحة كبيرة. يتحول لونها إلى الأحمر مع الشمس القوية. يحتاج إلى ري قليل."
    },
    "hi": {
      "common_name": "फ्लैपजैक पौधा",
      "description": "Kalanchoe luciae एक रसीला पौधा है जिसकी पत्तियाँ चपटी होती हैं। तेज धूप में पत्तियाँ लाल हो जाती हैं। इसे कम पानी चाहिए।"
    },
    "zh": {
      "common_name": "扇叶伽蓝菜",
      "description": "Kalanchoe luciae 是一种多肉植物，叶片宽大扁平。强光下叶缘会变红。适合少量浇水养护。"
    },
    "ja": {
      "common_name": "カランコエ・ルキアエ",
      "description": "カランコエ・ルキアエは平たい葉を持つ多肉植物です。強い日光で赤く色づきます。水やりは控えめにします。"
    },
    "ko": {
      "common_name": "플랩잭 다육식물",
      "description": "Kalanchoe luciae는 넓고 평평한 잎을 가진 다육식물입니다. 강한 햇빛에서 붉은 색을 띱니다. 물은 적게 줍니다."
    }
  },

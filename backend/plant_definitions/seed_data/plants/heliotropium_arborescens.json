  "translations": {
    "en": {
      "common_name": "Garden heliotrope",
      "description": "Heliotropium arborescens is a fragrant flowering plant known for its purple blooms. It prefers bright sun and evenly moist soil during growth."
    },
    "pl": {
      "common_name": "Heliotrop peruwiański",
      "description": "Heliotropium arborescens to pachnąca roślina o fioletowych kwiatach. Wymaga słońca i umiarkowanie wilgotnej gleby."
    },
    "de": {
      "common_name": "Vanilleblume",
      "description": "Heliotropium arborescens ist eine duftende Pflanze mit violetten Blüten. Sie braucht viel Sonne und gleichmäßige Feuchtigkeit."
    },
    "fr": {
      "common_name": "Héliotrope du Pérou",
      "description": "Heliotropium arborescens est une plante parfumée aux fleurs violettes. Elle aime le soleil et un sol régulièrement humide."
    },
    "it": {
      "common_name": "Eliotropio",
      "description": "Heliotropium arborescens è noto per i suoi fiori profumati viola. Richiede pieno sole e annaffiature regolari."
    },
    "es": {
      "common_name": "Heliotropo",
      "description": "Heliotropium arborescens es una planta aromática de flores violetas. Necesita sol pleno y riego constante."
    },
    "pt": {
      "common_name": "Heliotrópio",
      "description": "Heliotropium arborescens possui flores roxas perfumadas. Prefere sol intenso e solo levemente úmido."
    },
    "ar": {
      "common_name": "زهرة الهليوتروب",
      "description": "نبات عطري بأزهار أرجوانية جميلة. يحتاج إلى شمس قوية وري منتظم."
    },
    "hi": {
      "common_name": "हेलियोट्रोप",
      "description": "यह सुगंधित पौधा बैंगनी फूलों के लिए जाना जाता है। इसे धूप और नियमित पानी चाहिए।"
    },
    "zh": {
      "common_name": "香水花",
      "description": "Heliotropium arborescens 以紫色芳香花朵著称。喜阳光充足和适度浇水。"
    },
    "ja": {
      "common_name": "ニオイムラサキ",
      "description": "芳香のある紫色の花を咲かせる植物です。日当たりと定期的な水やりを好みます。"
    },
    "ko": {
      "common_name": "헬리오트로프",
      "description": "보라색 향기로운 꽃이 특징입니다. 햇빛과 규칙적인 물주기가 필요합니다."
    }
  },
